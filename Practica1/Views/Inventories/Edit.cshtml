@model Practica1.Models.Inventories

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Inventories</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product_id" class="control-label"></label>
                <select asp-for="Product_id" class="form-control" asp-items="@ViewBag.ProductsList"></select>
                <span asp-validation-for="Product_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Warehouse_id" class="control-label"></label>
                <select asp-for="Warehouse_id" class="form-control" asp-items="@ViewBag.WarehousesList"></select>
                <span asp-validation-for="Warehouse_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
